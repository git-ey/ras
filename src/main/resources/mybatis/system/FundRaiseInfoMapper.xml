<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FundRaiseInfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_FUND_RAISE_INFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FUND_ID,	
		FUND_CODE,	
		LEVEL,	
		AMOUNT,	
		UNITS,	
		ACTIVE,	
		STATUS,	
		FUNDRAISEINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FUND_ID},	
		#{FUND_CODE},	
		#{LEVEL},	
		#{AMOUNT},	
		#{UNITS},	
		#{ACTIVE},	
		#{STATUS},	
		#{FUNDRAISEINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			FUNDRAISEINFO_ID = #{FUNDRAISEINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FUND_ID = #{FUND_ID},
			FUND_CODE = #{FUND_CODE},
			LEVEL = #{LEVEL},
		    <if test="AMOUNT != null and AMOUNT != ''">
			AMOUNT = #{AMOUNT},
			</if>
			<if test="UNITS != null and UNITS != ''">
			UNITS = #{UNITS},
			</if>
			ACTIVE = #{ACTIVE},
		FUNDRAISEINFO_ID = FUNDRAISEINFO_ID
		where 
		FUNDRAISEINFO_ID = #{FUNDRAISEINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			FUNDRAISEINFO_ID = #{FUNDRAISEINFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件  -->
					FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					FUND_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				     or 
					LEVEL LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			FUNDRAISEINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
		<!-- 批量新增-->
	<!-- yury，20200910，新增实收基金下注释 -->
	<insert id="saveBatch" parameterType="java.util.List">
		insert into 
	        <include refid="tableName"></include>
		(
	        <include refid="Field"></include>,
			AMOUNT_PRINCIPAL,
			AMOUNT_INTEREST
		) values 
		<foreach collection ="list" item="pd" index= "index" separator =",">
         (
		#{pd.FUND_ID},	
		#{pd.FUND_CODE},	
		#{pd.LEVEL},	
		#{pd.AMOUNT},	
		#{pd.UNITS},	
		#{pd.ACTIVE},	
		#{pd.STATUS},	
		#{pd.FUNDRAISEINFO_ID},
		#{pd.AMOUNT_PRINCIPAL},
	    #{pd.AMOUNT_INTEREST}
         )
         </foreach >
	</insert>
	
</mapper>