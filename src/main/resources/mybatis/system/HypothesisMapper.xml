<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="HypothesisMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EY_HYPOTHESIS
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FUND_ID,	
		HYPOTHESIS_TPYE,	
		HYPOTHESIS_NUM,	
		DESCRIPTION,	
		ACTIVE,	
		STATUS,	
		HYPOTHESIS_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FUND_ID},	
		#{HYPOTHESIS_TPYE},	
		#{HYPOTHESIS_NUM},	
		#{DESCRIPTION},	
		#{ACTIVE},	
		#{STATUS},	
		#{HYPOTHESIS_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			HYPOTHESIS_ID = #{HYPOTHESIS_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FUND_ID = #{FUND_ID},
			HYPOTHESIS_TPYE = #{HYPOTHESIS_TPYE},
			HYPOTHESIS_NUM = #{HYPOTHESIS_NUM},
			DESCRIPTION = #{DESCRIPTION},
			ACTIVE = #{ACTIVE},
		HYPOTHESIS_ID = HYPOTHESIS_ID
		where 
		HYPOTHESIS_ID = #{HYPOTHESIS_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			HYPOTHESIS_ID = #{HYPOTHESIS_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					HYPOTHESIS_TPYE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					HYPOTHESIS_NUM LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			HYPOTHESIS_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>