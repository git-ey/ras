<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AcctmappingMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_ACCTMAPPING
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FUND_ID,	
		ACCOUNT_NUM,	
		ACCOUNT_DESCRIPTION,	
		LEVEL,	
		CURRENCY,	
		TYPE,	
		ENTERABLE,	
		EY_ACCOUNT_NUM,	
		ATTR1,	
		ATTR2,	
		ATTR3,	
		ATTR4,	
		ATTR5,	
		ATTR6,	
		ACTIVE,	
		ACCTMAPPING_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FUND_ID},	
		#{ACCOUNT_NUM},	
		#{ACCOUNT_DESCRIPTION},	
		#{LEVEL},	
		#{CURRENCY},	
		#{TYPE},	
		#{ENTERABLE},	
		#{EY_ACCOUNT_NUM},	
		#{ATTR1},	
		#{ATTR2},	
		#{ATTR3},	
		#{ATTR4},	
		#{ATTR5},	
		#{ATTR6},	
		#{ACTIVE},	
		#{ACCTMAPPING_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ACCTMAPPING_ID = #{ACCTMAPPING_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FUND_ID = #{FUND_ID},
			ACCOUNT_NUM = #{ACCOUNT_NUM},
			ACCOUNT_DESCRIPTION = #{ACCOUNT_DESCRIPTION},
			LEVEL = #{LEVEL},
			CURRENCY = #{CURRENCY},
			TYPE = #{TYPE},
			ENTERABLE = #{ENTERABLE},
			EY_ACCOUNT_NUM = #{EY_ACCOUNT_NUM},
			ATTR1 = #{ATTR1},
			ACTIVE = #{ACTIVE},
		ACCTMAPPING_ID = ACCTMAPPING_ID
		where 
		ACCTMAPPING_ID = #{ACCTMAPPING_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ACCTMAPPING_ID = #{ACCTMAPPING_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					EY_ACCOUNT_NUM LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					ACCOUNT_DESCRIPTION LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				
				)
		</if>
		<if test="pd.FUND_ID!= null and pd.FUND_ID != ''">
		   and FUND_ID = #{pd.FUND_ID}
		</if>
		<if test="pd.ACCOUNT_NUM != null and pd.ACCOUNT_NUM != ''">
		   and ACCOUNT_NUM = #{pd.ACCOUNT_NUM}
		</if>
		<if test="pd.EY_ACCOUNT_NUM!= null and pd.EY_ACCOUNT_NUM != ''">
		   and EY_ACCOUNT_NUM = #{pd.EY_ACCOUNT_NUM}
		</if>
		<if test="pd.LEVEL!= null and pd.LEVEL != ''">
		   and LEVEL = #{pd.LEVEL}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ACCTMAPPING_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量新增-->
	<insert id="saveBatch" parameterType="java.util.List">
		insert into 
	        <include refid="tableName"></include>
		(
	        <include refid="Field"></include>
		) values 
		<foreach collection ="list" item="pd" index= "index" separator =",">
         (
		     #{pd.FUND_ID},	
		     #{pd.ACCOUNT_NUM},	
		     #{pd.ACCOUNT_DESCRIPTION},	
		     #{pd.LEVEL},	
		     #{pd.CURRENCY},	
		     #{pd.TYPE},	
		     #{pd.ENTERABLE},	
		     #{pd.EY_ACCOUNT_NUM},	
		     #{pd.ATTR1},	
		     #{pd.ATTR2},	
		     #{pd.ATTR3},	
		     #{pd.ATTR4},	
		     #{pd.ATTR5},	
		     #{pd.ATTR6},	
		     #{pd.ACTIVE},	
		     #{pd.ACCTMAPPING_ID}
         )
         </foreach >
	</insert>
	
</mapper>