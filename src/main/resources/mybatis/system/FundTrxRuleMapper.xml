<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FundTrxRuleMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_FUND_TRX_RULE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FUND_ID,	
		PERIOD,	
		TYPE,	
		ATTR1,	
		ATTR2,	
		ATTR3,	
		ATTR4,	
		ATTR5,	
		ATTR6,	
		ATTR7,	
		ATTR8,	
		ATTR9,	
		ACTIVE,	
		STATUS,	
		FUNDTRXRULE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FUND_ID},	
		#{PERIOD},	
		#{TYPE},	
		#{ATTR1},	
		#{ATTR2},	
		#{ATTR3},	
		#{ATTR4},	
		#{ATTR5},	
		#{ATTR6},	
		#{ATTR7},	
		#{ATTR8},	
		#{ATTR9},	
		#{ACTIVE},	
		#{STATUS},	
		#{FUNDTRXRULE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			FUNDTRXRULE_ID = #{FUNDTRXRULE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FUND_ID = #{FUND_ID},
			PERIOD = #{PERIOD},
			TYPE = #{TYPE},
			ATTR1 = #{ATTR1},
			ATTR2 = #{ATTR2},
			ATTR3 = #{ATTR3},
			ATTR4 = #{ATTR4},
			ATTR5 = #{ATTR5},
			ATTR6 = #{ATTR6},
			ATTR7 = #{ATTR7},
			ATTR8 = #{ATTR8},
			ATTR9 = #{ATTR9},
			ACTIVE = #{ACTIVE},
		FUNDTRXRULE_ID = FUNDTRXRULE_ID
		where 
		FUNDTRXRULE_ID = #{FUNDTRXRULE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			FUNDTRXRULE_ID = #{FUNDTRXRULE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					PERIOD LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or
					TYPE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			FUNDTRXRULE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量新增-->
	<insert id="saveBatch" parameterType="java.util.List">
		insert into 
	        <include refid="tableName"></include>
		(
	        <include refid="Field"></include>
		) values 
		<foreach collection ="list" item="pd" index= "index" separator =",">
         (
		#{pd.FUND_ID},	
		#{pd.PERIOD},	
		#{pd.TYPE},	
		#{pd.ATTR1},	
		#{pd.ATTR2},	
		#{pd.ATTR3},	
		#{pd.ATTR4},	
		#{pd.ATTR5},	
		#{pd.ATTR6},	
		#{pd.ATTR7},	
		#{pd.ATTR8},	
		#{pd.ATTR9},	
		#{pd.ACTIVE},	
		#{pd.STATUS},	
		#{pd.FUNDTRXRULE_ID}
         )
         </foreach >
	</insert>
	
</mapper>