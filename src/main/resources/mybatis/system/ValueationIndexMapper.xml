<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ValueationIndexMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_VALUEATION_INDEX
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		MMF,	
		TYPE,	
		MARKET,	
		SUB_TYPE,	
		TRX_STATUS,	
		INTEREST_MODE,	
		VAL_TYPE_INDEX,	
		VAL_TYPE_CODE,	
		VAL_TYPE_DEXS,	
		VAL_BASE_SOURCE,	
		VAL_COLUMN,	
		THREE_LEVEL,	
		VALUEATIONINDEX_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MMF},	
		#{TYPE},	
		#{MARKET},	
		#{SUB_TYPE},	
		#{TRX_STATUS},	
		#{INTEREST_MODE},	
		#{VAL_TYPE_INDEX},	
		#{VAL_TYPE_CODE},	
		#{VAL_TYPE_DEXS},	
		#{VAL_BASE_SOURCE},	
		#{VAL_COLUMN},	
		#{THREE_LEVEL},	
		#{VALUEATIONINDEX_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			VALUEATIONINDEX_ID = #{VALUEATIONINDEX_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MMF = #{MMF},
			TYPE = #{TYPE},
			MARKET = #{MARKET},
			SUB_TYPE = #{SUB_TYPE},
			TRX_STATUS = #{TRX_STATUS},
			INTEREST_MODE = #{INTEREST_MODE},
			VAL_TYPE_INDEX = #{VAL_TYPE_INDEX},
			VAL_TYPE_CODE = #{VAL_TYPE_CODE},
			VAL_TYPE_DEXS = #{VAL_TYPE_DEXS},
			VAL_BASE_SOURCE = #{VAL_BASE_SOURCE},
			VAL_COLUMN = #{VAL_COLUMN},
			THREE_LEVEL = #{THREE_LEVEL},
		VALUEATIONINDEX_ID = VALUEATIONINDEX_ID
		where 
		VALUEATIONINDEX_ID = #{VALUEATIONINDEX_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			VALUEATIONINDEX_ID = #{VALUEATIONINDEX_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					TYPE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					SUB_TYPE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			VALUEATIONINDEX_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>