<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="URowSetMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_UROWSET
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ROW_SET_CODE,	
		ROW_SET,	
		ROW_SET_TPYE,	
		COLUMN_NUM,	
		ROW_NUM,	
		ROW_NAME,	
		UROWSET_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ROW_SET_CODE},	
		#{ROW_SET},	
		#{ROW_SET_TPYE},	
		#{COLUMN_NUM},	
		#{ROW_NUM},	
		#{ROW_NAME},	
		#{UROWSET_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			UROWSET_ID = #{UROWSET_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			ROW_SET_CODE = #{ROW_SET_CODE},
			ROW_SET = #{ROW_SET},
			ROW_SET_TPYE = #{ROW_SET_TPYE},
			COLUMN_NUM = #{COLUMN_NUM},
			ROW_NUM = #{ROW_NUM},
			ROW_NAME = #{ROW_NAME}
		where 
		UROWSET_ID = #{UROWSET_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			UROWSET_ID = #{UROWSET_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					ROW_SET_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					ROW_SET LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					ROW_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
		<if test="pd.ROW_SET_TPYE != null and pd.ROW_SET_TPYE != ''">
		    and ROW_SET_TPYE = #{pd.ROW_SET_TPYE}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
		<!-- 列表U底稿行集 -->
	<select id="listURowSet" parameterType="pd" resultType="pd">
		select
		  ROW_SET_CODE,
		  ROW_SET
		from 
		<include refid="tableName"></include>
		GROUP BY ROW_SET_CODE,ROW_SET
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			UROWSET_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>