<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ConvexityMapper">
	
	<!--表名 -->
	<sql id="tableName">
		SYS_DURATION_CONVEXITY
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		BOND_NAME,	
		BOND_CODE,	
		PERIOD,	
		SOURCE,	
		DURATION,	
		CONVEXITY,	
		ACTIVE,	
		STATUS,	
		CONVEXITY_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{BOND_NAME},	
		#{BOND_CODE},	
		#{PERIOD},	
		#{SOURCE},	
		#{DURATION},	
		#{CONVEXITY},	
		#{ACTIVE},	
		#{STATUS},	
		#{CONVEXITY_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			CONVEXITY_ID = #{CONVEXITY_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			BOND_NAME = #{BOND_NAME},
			BOND_CODE = #{BOND_CODE},
			PERIOD = #{PERIOD},
			SOURCE = #{SOURCE},
			DURATION = #{DURATION},
			CONVEXITY = #{CONVEXITY},
		CONVEXITY_ID = CONVEXITY_ID
		where 
		CONVEXITY_ID = #{CONVEXITY_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			CONVEXITY_ID = #{CONVEXITY_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					BOND_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					BOND_NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			CONVEXITY_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量新增-->
	<insert id="saveBatch" parameterType="java.util.List">
		insert into 
	        <include refid="tableName"></include>
		(
	        <include refid="Field"></include>
		) values 
		<foreach collection ="list" item="pd" index= "index" separator =",">
         (
		    #{pd.BOND_NAME},	
		    #{pd.BOND_CODE},	
		    #{pd.PERIOD},	
		    #{pd.SOURCE},	
		    #{pd.DURATION},	
	 	    #{pd.CONVEXITY},	
		    #{pd.ACTIVE},	
		    #{pd.STATUS},	
		    #{pd.CONVEXITY_ID}
         )
         </foreach >
	</insert>
	
</mapper>