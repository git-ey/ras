<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="H11HeadMapper">
	
	<!--表名 -->
	<sql id="tableName">
		WP_H11_HEAD
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PERIOD,	
		FIRM_CODE,	
		STOCK_CODE,	
		STOCK_NAME,	
		INDUSTRY,	
		RECENT_TRX_DATE,	
		AMAC_PRICE,	
		RECENT_PRICE,	
		AMAC,	
		VAL_TYPE,	
		VAL_PRICE,	
		RESULT,	
		DESCRIPTION,	
		H11HEAD_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PERIOD},	
		#{FIRM_CODE},	
		#{STOCK_CODE},	
		#{STOCK_NAME},	
		#{INDUSTRY},	
		#{RECENT_TRX_DATE},	
		#{AMAC_PRICE},	
		#{RECENT_PRICE},	
		#{AMAC},	
		#{VAL_TYPE},	
		#{VAL_PRICE},	
		#{RESULT},	
		#{DESCRIPTION},	
		#{H11HEAD_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			H11HEAD_ID = #{H11HEAD_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			<if test="AMAC_PRICE != null and AMAC_PRICE != ''">
			AMAC_PRICE = #{AMAC_PRICE},
			</if>
			<if test="RECENT_PRICE != null and RECENT_PRICE != ''">
			RECENT_PRICE = #{RECENT_PRICE},
			</if>
			AMAC = #{AMAC},
			VAL_TYPE = #{VAL_TYPE},
			<if test="VAL_PRICE != null and VAL_PRICE != ''">
			VAL_PRICE = #{VAL_PRICE},
			</if>
			RESULT = #{RESULT},
			DESCRIPTION = #{DESCRIPTION},
		H11HEAD_ID = H11HEAD_ID
		where 
		H11HEAD_ID = #{H11HEAD_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			H11HEAD_ID = #{H11HEAD_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				    <!-- 根据需求自己加检索条件 -->
					FIRM_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					STOCK_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					PERIOD LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			H11HEAD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>