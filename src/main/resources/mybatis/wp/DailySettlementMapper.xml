<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="DailySettlementMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EY_DAILY_SETTLEMENT
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FUND_ID,	
		PERIOD,	
		TRX_DATE,	
		TRX_TYPE,	
		DEALER,	
		TRX_QUANTITY,	
		TRX_AMOUNT,	
		TRX_FEE,	
		BACKEND_FEE,	
		CONFIRMED_AMOUNT,
		ACTIVE,
		STATUS,	
		DAILY_SETTLEMENT_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FUND_ID},	
		#{PERIOD},	
		#{TRX_DATE},	
		#{TRX_TYPE},	
		#{DEALER},	
		#{TRX_QUANTITY},	
		#{TRX_AMOUNT},	
		#{TRX_FEE},	
		#{BACKEND_FEE},	
		#{CONFIRMED_AMOUNT},
		#{ACTIVE},
		#{STATUS},	
		#{DAILY_SETTLEMENT_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			DAILY_SETTLEMENT_ID = #{DAILY_SETTLEMENT_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FUND_ID = #{FUND_ID},
			PERIOD = #{PERIOD},
			TRX_DATE = #{TRX_DATE},
			TRX_TYPE = #{TRX_TYPE},
			DEALER = #{DEALER},
			<if test="TRX_QUANTITY != null and TRX_QUANTITY != ''">
			TRX_QUANTITY = #{TRX_QUANTITY},
			</if>
			<if test="TRX_AMOUNT != null and TRX_AMOUNT != ''">
			TRX_AMOUNT = #{TRX_AMOUNT},
			</if>
			<if test="TRX_FEE != null and TRX_FEE != ''">
			TRX_FEE = #{TRX_FEE},
			</if>
			<if test="BACKEND_FEE != null and BACKEND_FEE != ''">
			BACKEND_FEE = #{BACKEND_FEE},
			</if>
			<if test="CONFIRMED_AMOUNT != null and CONFIRMED_AMOUNT != ''">
			CONFIRMED_AMOUNT = #{CONFIRMED_AMOUNT},
			</if>
			ACTIVE = #{ACTIVE},
			STATUS = #{STATUS}
		where 
		DAILY_SETTLEMENT_ID = #{DAILY_SETTLEMENT_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			DAILY_SETTLEMENT_ID = #{DAILY_SETTLEMENT_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					DEALER LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			DAILY_SETTLEMENT_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量新增-->
	<insert id="saveBatch" parameterType="java.util.List">
		insert into 
	        <include refid="tableName"></include>
		(
	        <include refid="Field"></include>
		) values 
		<foreach collection ="list" item="pd" index= "index" separator =",">
         (
		#{pd.FUND_ID},	
		#{pd.PERIOD},	
		#{pd.TRX_DATE},	
		#{pd.TRX_TYPE},	
		#{pd.DEALER},	
		#{pd.TRX_QUANTITY},	
		#{pd.TRX_AMOUNT},	
		#{pd.TRX_FEE},	
		#{pd.BACKEND_FEE},	
		#{pd.CONFIRMED_AMOUNT},	
		#{pd.ACTIVE},
		#{pd.STATUS},	
		#{pd.DAILY_SETTLEMENT_ID}
         )
         </foreach >
	</insert>
	
</mapper>