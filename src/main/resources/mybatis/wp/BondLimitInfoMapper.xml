<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BondLimitInfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EY_BOND_LIMIT_INFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PERIOD,	
		FIRM_CODE,	
		FUND_ID,	
		MMF,	
		ACCOUNT_NUM,	
		BOND_CODE,	
		BOND_NAME,	
		MARKET,	
		SUB_TYPE,	
		TRX_STATUS,	
		RESTRICT_TYPE,	
		SUBSCRIBE_DATE,	
		SUBSCRIBE_PRICE,	
		LIFTING_DATE,	
		SUSPENSION_DATE,	
		SUSPENSION_INFO,	
		RESUMPTION_DATE,	
		RESMPATION_OPEN_PRICE,	
		CREATOR,	
		REVIEWER,	
		LIMIT_LEN,<!-- 20220630 IRENE新增-->	
		BONDLIMITINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PERIOD},	
		#{FIRM_CODE},	
		#{FUND_ID},	
		#{MMF},	
		#{ACCOUNT_NUM},	
		#{BOND_CODE},	
		#{BOND_NAME},	
		#{MARKET},	
		#{SUB_TYPE},	
		#{TRX_STATUS},	
		#{RESTRICT_TYPE},	
		#{SUBSCRIBE_DATE},	
		#{SUBSCRIBE_PRICE},	
		#{LIFTING_DATE},	
		#{SUSPENSION_DATE},	
		#{SUSPENSION_INFO},	
		#{RESUMPTION_DATE},	
		#{RESMPATION_OPEN_PRICE},	
		#{CREATOR},	
		#{REVIEWER},
		#{LIMIT_LEN},	<!-- 20220630 IRENE新增-->	
		#{BONDLIMITINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			BONDLIMITINFO_ID = #{BONDLIMITINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PERIOD = #{PERIOD},
			FIRM_CODE = #{FIRM_CODE},
			FUND_ID = #{FUND_ID},
			MMF = #{MMF},
			ACCOUNT_NUM = #{ACCOUNT_NUM},
			BOND_CODE = #{BOND_CODE},
			BOND_NAME = #{BOND_NAME},
			MARKET = #{MARKET},
			SUB_TYPE = #{SUB_TYPE},
			TRX_STATUS = #{TRX_STATUS},
			RESTRICT_TYPE = #{RESTRICT_TYPE},
			SUBSCRIBE_DATE = #{SUBSCRIBE_DATE},
			<if test="SUBSCRIBE_PRICE != null and SUBSCRIBE_PRICE != ''">
			SUBSCRIBE_PRICE = #{SUBSCRIBE_PRICE},
			</if>
			LIFTING_DATE = #{LIFTING_DATE},
			SUSPENSION_DATE = #{SUSPENSION_DATE},
			SUSPENSION_INFO = #{SUSPENSION_INFO},
			RESUMPTION_DATE = #{RESUMPTION_DATE},
			<if test="RESMPATION_OPEN_PRICE != null and RESMPATION_OPEN_PRICE != ''">
			RESMPATION_OPEN_PRICE = #{RESMPATION_OPEN_PRICE},
			</if>
			CREATOR = #{CREATOR},
			REVIEWER = #{REVIEWER},
			LIMIT_LEN = #{LIMIT_LEN},<!-- 20220630IRENE新增 -->
		BONDLIMITINFO_ID = BONDLIMITINFO_ID
		where 
		BONDLIMITINFO_ID = #{BONDLIMITINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			BONDLIMITINFO_ID = #{BONDLIMITINFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					PERIOD LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					FIRM_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			BONDLIMITINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 批量新增-->
	<insert id="saveBatch" parameterType="java.util.List">
		insert into 
	        <include refid="tableName"></include>
		(
	        <include refid="Field"></include>
		) values 
		<foreach collection ="list" item="pd" index= "index" separator =",">
         (
		#{pd.PERIOD},	
		#{pd.FIRM_CODE},	
		#{pd.FUND_ID},	
		#{pd.MMF},	
		#{pd.ACCOUNT_NUM},	
		#{pd.BOND_CODE},	
		#{pd.BOND_NAME},	
		#{pd.MARKET},	
		#{pd.SUB_TYPE},	
		#{pd.TRX_STATUS},	
		#{pd.RESTRICT_TYPE},	
		#{pd.SUBSCRIBE_DATE},	
		#{pd.SUBSCRIBE_PRICE},	
		#{pd.LIFTING_DATE},	
		#{pd.SUSPENSION_DATE},	
		#{pd.SUSPENSION_INFO},	
		#{pd.RESUMPTION_DATE},	
		#{pd.RESMPATION_OPEN_PRICE},	
		#{pd.CREATOR},	
		#{pd.REVIEWER},	
		#{pd.LIMIT_LEN},	<!-- 20220630IRENE新增-->
		#{pd.BONDLIMITINFO_ID}
         )
         </foreach >
	</insert>
	
</mapper>