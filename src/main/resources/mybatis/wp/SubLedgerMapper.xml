<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SubLedgerMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EY_SUB_LEDGER
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		FUND_ID,	
		PERIOD,	
		ACCOUNT_NUM,	
		LINE,	
		EFFECTIVE_DATE,	
		SQUENCE_NUM,	
		DESCRIPTION,	
		CURRENCY,	
		DR_UNITS,	
		CR_UNITS,	
		DR_AMOUNT,	
		CR_AMOUNT,	
		END_DRCR,	
		END_UNITS,	
		END_BALANCE,	
		ACTIVE,	
		STATUS,	
		SUBLEDGER_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{FUND_ID},	
		#{PERIOD},	
		#{ACCOUNT_NUM},	
		#{LINE},	
		#{EFFECTIVE_DATE},	
		#{SQUENCE_NUM},	
		#{DESCRIPTION},	
		#{CURRENCY},	
		#{DR_UNITS},	
		#{CR_UNITS},	
		#{DR_AMOUNT},	
		#{CR_AMOUNT},	
		#{END_DRCR},	
		#{END_UNITS},	
		#{END_BALANCE},	
		#{ACTIVE},	
		#{STATUS},	
		#{SUBLEDGER_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SUBLEDGER_ID = #{SUBLEDGER_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			FUND_ID = #{FUND_ID},
			PERIOD = #{PERIOD},
			ACCOUNT_NUM = #{ACCOUNT_NUM},
			LINE = #{LINE},
			EFFECTIVE_DATE = #{EFFECTIVE_DATE},
			SQUENCE_NUM = #{SQUENCE_NUM},
			DESCRIPTION = #{DESCRIPTION},
			CURRENCY = #{CURRENCY},
			<if test="DR_UNITS != null and DR_UNITS != ''">
			DR_UNITS = #{DR_UNITS},
			</if>
			<if test="CR_UNITS != null and CR_UNITS != ''">
			CR_UNITS = #{CR_UNITS},
			</if>
			<if test="DR_AMOUNT != null and DR_AMOUNT != ''">
			DR_AMOUNT = #{DR_AMOUNT},
			</if>
			<if test="CR_AMOUNT != null and CR_AMOUNT != ''">
			CR_AMOUNT = #{CR_AMOUNT},
			</if>
			END_DRCR = #{END_DRCR},
			<if test="END_UNITS != null and END_UNITS != ''">
			END_UNITS = #{END_UNITS},
			</if>
			<if test="END_BALANCE != null and END_BALANCE != ''">
			END_BALANCE = #{END_BALANCE},
			</if>
			ACTIVE = #{ACTIVE},
			STATUS = #{STATUS},
		SUBLEDGER_ID = SUBLEDGER_ID
		where 
		SUBLEDGER_ID = #{SUBLEDGER_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			SUBLEDGER_ID = #{SUBLEDGER_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
				    FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords,jdbcType=VARCHAR}),'%')
					 or
					ACCOUNT_NUM LIKE CONCAT(CONCAT('%', #{pd.keywords,jdbcType=VARCHAR}),'%')
					 or 
					PERIOD LIKE CONCAT(CONCAT('%', #{pd.keywords,jdbcType=VARCHAR}),'%') 
				     or
				    DESCRIPTION LIKE CONCAT(CONCAT('%', #{pd.keywords,jdbcType=VARCHAR}),'%') 
				)
		</if>
		<if test="pd.lastStart!= null and pd.lastStart != ''">
		    and EFFECTIVE_DATE &gt;= #{pd.lastStart,jdbcType=DATE}
		</if>
		
		<if test="pd.lastEnd!= null and pd.lastEnd != ''">
		    and EFFECTIVE_DATE &lt;= #{pd.lastEnd,jdbcType=DATE}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SUBLEDGER_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>