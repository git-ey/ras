<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="StockLimitInfoMapper">
	
	<!--表名 -->
	<sql id="tableName">
		EY_STOCK_LIMIT_INFO
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		PERIOD,	
		FIRM_CODE,	
		FUND_ID,	
		ACCOUNT_NUM,	
		STOCK_CODE,	
		STOCK_NAME,	
		MARKET,	
		SUB_TYPE,	
		TRX_STATUS,	
		RESTRICT_TYPE,	
		SUBSCRIBE_DATE,	
		SUBSCRIBE_PRICE,	
		LEFTING_DATE,	
		CREATOR,	
		REVIEWER,	
		ACTIVE,	
		STATUS,	
		STOCKLIMITINFO_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{PERIOD},	
		#{FIRM_CODE},	
		#{FUND_ID},	
		#{ACCOUNT_NUM},	
		#{STOCK_CODE},	
		#{STOCK_NAME},	
		#{MARKET},	
		#{SUB_TYPE},	
		#{TRX_STATUS},	
		#{RESTRICT_TYPE},	
		#{SUBSCRIBE_DATE},	
		#{SUBSCRIBE_PRICE},	
		#{LEFTING_DATE},	
		#{CREATOR},	
		#{REVIEWER},	
		#{ACTIVE},	
		#{STATUS},	
		#{STOCKLIMITINFO_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			STOCKLIMITINFO_ID = #{STOCKLIMITINFO_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			PERIOD = #{PERIOD},
			FIRM_CODE = #{FIRM_CODE},
			FUND_ID = #{FUND_ID},
			ACCOUNT_NUM = #{ACCOUNT_NUM},
			STOCK_CODE = #{STOCK_CODE},
			STOCK_NAME = #{STOCK_NAME},
			MARKET = #{MARKET},
			SUB_TYPE = #{SUB_TYPE},
			TRX_STATUS = #{TRX_STATUS},
			RESTRICT_TYPE = #{RESTRICT_TYPE},
			SUBSCRIBE_DATE = #{SUBSCRIBE_DATE},
			SUBSCRIBE_PRICE = #{SUBSCRIBE_PRICE},
			LEFTING_DATE = #{LEFTING_DATE},
			CREATOR = #{CREATOR},
			REVIEWER = #{REVIEWER},
		STOCKLIMITINFO_ID = STOCKLIMITINFO_ID
		where 
		STOCKLIMITINFO_ID = #{STOCKLIMITINFO_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			STOCKLIMITINFO_ID = #{STOCKLIMITINFO_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!-- 根据需求自己加检索条件 -->
					FIRM_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					FUND_ID LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				     or 
					ACCOUNT_NUM LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
					 or 
					STOCK_CODE LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
		<if test="pd.PERIOD != null and pd.PERIOD != ''">
		    and PERIOD = #{pd.PERIOD}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			STOCKLIMITINFO_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
</mapper>